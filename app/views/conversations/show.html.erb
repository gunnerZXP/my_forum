<%= link_to @conversation.board.title, @conversation.board%>
<p id="notice"><%= notice %></p>
 
 
 
<table>
  <tr>
    <th colspan="2" align="left"><%= @conversation.title %></th><br/>
  </tr>
  <% @conversation.comments.each do |comment| %>
  <tr>
    <td style="width:25%;"><%= link_to comment.user.username, comment.user %><br/>
      Posted At :<%= comment.created_at%>
    </td>
    <td style="width:10%;">
      <p><%=comment.body%></p>
    </td>
  </tr>
  <% end %>
</table>
<%= will_paginate @comments %> 
<br/>
<%= link_to '回复',reply_board_conversation_url(:board_id=>@board, :id=>@conversation)%> |
<%= link_to 'back', @conversation.board%>
